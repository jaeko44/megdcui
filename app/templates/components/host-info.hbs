<div class="large-12 columns">
     <div class="large-3 columns">
       <h3>{{t "step2.host"}}{{number}}</h3>
     </div>
        <div class="large-3 columns">
            {{input value=model.ipaddress placeholder="Enter a Ip Address..." type="text"}}
        </div>
        <div class="large-3 columns">
            {{input value=model.username placeholder="Enter a name..." type="text"}}
        </div>
        <div class="large-3 columns">
            {{input value=model.password placeholder="And password..." type="password"}}
        </div>
  </div>
      {{#if isButtonVisible}}
        <button class="button" {{action 'validateAndAuthenticate'}}>Add Host</button>
        <button class="button" {{action 'done'}}>Done</button>
      {{/if}}
